{
    "name": "clone-check",
    "version": "1.1.0",
    "description": "A utility to check whether a directory is an exact clone of another directory.",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "bin": "./dist/cjs/index.js",
    "license": "Apache-2.0",
    "author": "Roman Gischkowski <dev@rgischk.de>",
    "keywords": [
        "clone",
        "copy",
        "create-react-app"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rgischk/clone-check.git"
    },
    "homepage": "https://github.com/rgischk/clone-check#readme",
    "files": [
        "src",
        "dist"
    ],
    "scripts": {
        "clean": "rimraf node_modules dist",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "pretty:check": "prettier . --check",
        "pretty": "prettier . --write",
        "code:check": "yarn lint && yarn pretty:check",
        "code:fix": "yarn lint:fix && yarn pretty",
        "test": "jest",
        "build:esm": "tsc",
        "build:cjs": "tsc --outDir ./dist/cjs/ --module commonjs",
        "build": "yarn build:esm && yarn build:cjs",
        "cli": "ts-node src/index.ts"
    },
    "dependencies": {
        "commander": "^9.0.0",
        "glob": "^7.2.0",
        "md5-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.15",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.5.0",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    }
}
